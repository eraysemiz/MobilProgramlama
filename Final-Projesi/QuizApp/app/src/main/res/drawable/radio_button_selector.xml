<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Outer circle -->
            <item android:width="24dp" android:height="24dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/> <!-- Outer ring -->
                </shape>
            </item>
            <!-- Inner dot -->
            <item android:width="12dp" android:height="12dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/black"/> <!-- Inner selected dot -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Unselected State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/> <!-- Empty white circle -->
        </shape>
    </item>
</selector>
